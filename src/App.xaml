<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADHDWorkspace.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Softer ADHD-friendly palette -->
            <Color x:Key="BackgroundDark">#1C1C1E</Color>
            <Color x:Key="SurfaceDark">#2C2C2E</Color>
            <Color x:Key="SurfaceDarkAlt">#3A3A3C</Color>
            <Color x:Key="DividerFlat">#3F3F41</Color>
            <Color x:Key="PrimaryText">#F5F5F7</Color>
            <Color x:Key="SecondaryText">#AEAEB2</Color>

            <!-- Accent colors with reduced saturation -->
            <Color x:Key="AccentCyan">#5AC8FA</Color>
            <Color x:Key="AccentRed">#FF6961</Color>
            <Color x:Key="AccentGreen">#34C759</Color>
            <Color x:Key="AccentOrange">#FF9F0A</Color>
            <Color x:Key="AccentYellow">#FFD866</Color>
            <Color x:Key="AccentBlue">#5AC8FA</Color>

            <!-- Status colors -->
            <Color x:Key="FocusActive">#FF6961</Color>
            <Color x:Key="FocusIdle">#5AC8FA</Color>
            <Color x:Key="PomodoroIdle">#3F3F41</Color>
            <Color x:Key="PomodoroActive">#FF5A5F</Color>
            <Color x:Key="BreakActive">#34C759</Color>
            <Color x:Key="ProgressGreen">#34C759</Color>
            <Color x:Key="ProgressOrange">#FF9F0A</Color>
            <Color x:Key="ProgressRed">#FF5A5F</Color>

            <!-- Common thickness helpers -->
            <Thickness x:Key="PagePadding">20</Thickness>
            <Thickness x:Key="SectionPadding">15</Thickness>
            <Thickness x:Key="ItemPadding">10</Thickness>

            <!-- Typography -->
            <x:String x:Key="IconFontFamily">FontAwesome</x:String>
            <x:String x:Key="IconClockGlyph">&#xF017;</x:String>
            <x:String x:Key="IconPomodoroGlyph">&#xF192;</x:String>
            <x:String x:Key="IconFocusGlyph">&#xF140;</x:String>
            <x:String x:Key="IconSettingsGlyph">&#xF013;</x:String>
            <x:String x:Key="IconCloseGlyph">&#xF00D;</x:String>
            <x:String x:Key="IconSaveGlyph">&#xF0C7;</x:String>
            <x:String x:Key="IconRestoreGlyph">&#xF0E2;</x:String>

            <Style x:Key="HeaderLarge" TargetType="Label">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
                <Setter Property="Margin" Value="0,0,0,10" />
            </Style>

            <Style x:Key="HeaderMedium" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
                <Setter Property="Margin" Value="0,15,0,10" />
            </Style>

            <Style x:Key="BodyText" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
            </Style>

            <Style x:Key="CaptionText" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="{StaticResource SecondaryText}" />
            </Style>

            <!-- Global styles -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}" />
                <Setter Property="Padding" Value="{StaticResource PagePadding}" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceDarkAlt}" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="20,12" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="MinimumHeightRequest" Value="44" />
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource AccentBlue}" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="Padding" Value="24,12" />
                <Setter Property="MinimumHeightRequest" Value="44" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceDark}" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryText}" />
                <Setter Property="HeightRequest" Value="44" />
                <Setter Property="Margin" Value="0,0,0,10" />
            </Style>

            <Style TargetType="Editor">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceDark}" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryText}" />
                <Setter Property="Margin" Value="0,0,0,10" />
            </Style>

            <Style x:Key="CardBorder" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceDark}" />
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="Padding" Value="{StaticResource SectionPadding}" />
                <Setter Property="Margin" Value="0,0,0,12" />
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="8" />
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
