{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (MAUI)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/ADHDWorkspace.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (Verbose)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/ADHDWorkspace.exe",
            "args": [
                "--verbose"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Icon Generator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/convert_logo_to_tray_icon.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": []
        }
    ]
}
